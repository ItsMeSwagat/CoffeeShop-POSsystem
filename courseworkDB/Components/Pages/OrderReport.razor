@attribute [Route(OrderReport.route)]

@using MudBlazor
@using courseworkDB.Services

@inject OrderService orderService

<h3 class=" p-3">Order Report</h3>
@if (orderService.Orders.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Customer Username</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in orderService.Orders)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@order.CustomerUsername</td>
                    <td>Rs @order.TotalPrice</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders available.</p>
}

@code {
    public const string route = "/orderreport";
}
